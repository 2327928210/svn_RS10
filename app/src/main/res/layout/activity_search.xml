<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.haoke.rs10.activity.SearchActivity">

    <RelativeLayout
        android:id="@+id/titlr_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_45">
        <include layout="@layout/layout_titlebar" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_30"
        android:text="@string/search_mohu"
        android:textColor="@color/color_333"
        android:textSize="@dimen/x_23" />

    <RelativeLayout
        android:id="@+id/login_user_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_55"
        android:layout_marginLeft="@dimen/x_50"
        android:layout_marginRight="@dimen/x_50"
        android:layout_marginTop="@dimen/y_30"
        android:background="@drawable/background_shape">

        <com.haoke.rs10.views.NameEdit
            android:id="@+id/ed_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/search_hint_1"
            android:inputType="textEmailAddress"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_aaa"
            android:textSize="@dimen/x_20">

            <requestFocus />
        </com.haoke.rs10.views.NameEdit>
    </RelativeLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_55"
        android:layout_marginLeft="@dimen/x_100"
        android:layout_marginRight="@dimen/x_100"
        android:layout_marginTop="@dimen/y_40"
        android:background="@drawable/background_shape_login"
        android:text="@string/search_str"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/x_23"></Button>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_60"
        android:text="@string/search_jq"
        android:textColor="@color/color_333"
        android:textSize="@dimen/x_23" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_55"
        android:layout_marginLeft="@dimen/x_50"
        android:layout_marginRight="@dimen/x_50"
        android:layout_marginTop="@dimen/y_30"
        android:background="@drawable/background_shape">

        <com.haoke.rs10.views.NameEdit
            android:id="@+id/ed_search_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/search_hint_1"
            android:inputType="textEmailAddress"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_aaa"
            android:textSize="@dimen/x_20">

        </com.haoke.rs10.views.NameEdit>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_55"
        android:layout_marginLeft="@dimen/x_50"
        android:layout_marginRight="@dimen/x_50"
        android:layout_marginTop="@dimen/y_30"
        android:background="@drawable/background_shape">

        <com.haoke.rs10.views.NameEdit
            android:id="@+id/ed_search_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/search_hint_2"
            android:inputType="textEmailAddress"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_aaa"
            android:textSize="@dimen/x_20">

        </com.haoke.rs10.views.NameEdit>
    </RelativeLayout>

    <Button
        android:id="@+id/button_serach"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y_55"
        android:layout_marginLeft="@dimen/x_100"
        android:layout_marginRight="@dimen/x_100"
        android:layout_marginTop="@dimen/y_40"
        android:background="@drawable/background_shape_login"
        android:text="@string/search_str"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/x_23"></Button>
</LinearLayout>
